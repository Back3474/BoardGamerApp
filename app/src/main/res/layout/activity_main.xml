<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/greetText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="hello [user]!"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/main_menuBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="#0000"
                android:contentDescription="@string/main_menuBtn"
                android:scaleType="fitEnd"
                android:src="@drawable/list_lines"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <LinearLayout
            android:id="@+id/main_meetingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_nextMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:text="@string/next_meeting"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nxt_mtng_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:text="@string/nxt_mtng_date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/main_mtng_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:text="@string/main_mtng_date"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_mtng_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:text="@string/main_mtng_time"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nxt_mtng_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:text="@string/nxt_mtng_host"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/main_mtng_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:text="@string/main_mtng_host"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nxt_mtng_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:text="@string/nxt_mtng_address"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/main_mtng_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:text="@string/main_mtng_address"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/main_ratingBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/main_ratingBtn" />

            <Button
                android:id="@+id/main_cannotTakePart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/main_cannotTakePart" />

            <Button
                android:id="@+id/main_lateBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="@string/main_lateBtn" />
        </TableRow>

        <Button
            android:id="@+id/main_gamesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/main_games" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/app_icon"
            android:scaleX="0.5"
            android:scaleY="0.5">

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>